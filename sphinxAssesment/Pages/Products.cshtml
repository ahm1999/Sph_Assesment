@page
@using DAL.Entities
@model sphinxAssesment.Pages.ProductsModel

@{
}



<form method="post" >
    

    <div class="form-outline ">
    <label class="form-label" asp-for="ViewModel.createProductDTO.Name" ></label>
    <input class="form-control w-50" asp-for="ViewModel.createProductDTO.Name">
    </div>
    <br />
    <span asp-validation-for="ViewModel.createProductDTO.Name" class="text-danger"></span>

    <br />
    
    <label class="form-label" asp-for="ViewModel.createProductDTO.Description"></label>
    <input class="form-control w-50" asp-for="ViewModel.createProductDTO.Description">
    
    <br />
    <span asp-validation-for="ViewModel.createProductDTO.Description" class="text-danger"></span>
    <br />
    <label class="form-label" asp-for="ViewModel.createProductDTO.IsActive"></label>
    <input class="form-check-input" asp-for="ViewModel.createProductDTO.IsActive">
    <br />
    <span asp-validation-for="ViewModel.createProductDTO.IsActive" class="text-danger"></span>
    <br />

    <button class="btn btn-primary" type="submit">Submit</button>
   
</form>


@for (var i = 0; i < Model.ViewModel.numberOfpages; i++)
{
    <a asp-page="/Products" asp-route-pageNo="@i">@i</a>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.ViewModel.products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.ViewModel.products[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.ViewModel.products[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Product product in Model.ViewModel.products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.IsActive)
                </td>
                <td>
                    <a asp-page="/Edit/EditProduct" asp-route-ProductId ="@product.ProductId" class="btn btn-primary" role="button">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>



<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>