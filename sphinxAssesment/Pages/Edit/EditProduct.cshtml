@page
@model sphinxAssesment.Pages.Edit.EditProductModel
@{
}

<div class="container">


<a asp-page="/Products" class="btn btn-primary" role="button">Go back</a>

<form asp-page="/Edit/EditProduct" asp-page-handler="Edit">

    <label asp-for="ViewModel.CurrentProduct.ProductId"></label>
    <input  asp-for="ViewModel.CurrentProduct.ProductId" value="@Model.ViewModel.CurrentProduct.ProductId" type="hidden" />
    


    <label asp-for="ViewModel.CurrentProduct.Name"></label>
        <input class="form-control w-50" asp-for="ViewModel.CurrentProduct.Name" value="@Model.ViewModel.CurrentProduct.Name" />
    <span asp-validation-for="ViewModel.CurrentProduct.Name" class="text-danger"></span>

    <label asp-for="ViewModel.CurrentProduct.Description"></label>
    <input class="form-control w-50" asp-for="ViewModel.CurrentProduct.Description" value="@Model.ViewModel.CurrentProduct.Description" />
    <span asp-validation-for="ViewModel.CurrentProduct.Description" class="text-danger"></span>

    <label asp-for="ViewModel.CurrentProduct.IsActive"></label>
    <input asp-for="ViewModel.CurrentProduct.IsActive" value="@Model.ViewModel.CurrentProduct.IsActive" />
    <span asp-validation-for="ViewModel.CurrentProduct.IsActive" class="text-danger"></span>
    <button class="btn btn-primary" type="submit" >Submit</button>
</form>

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Delete Product</button>

<!-- Modal -->
<div class="modal" id="myModal" role="dialog">
    <div class="modal-dialog align-items-center">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Product</h4>
            </div>
            <div class="modal-body">
                <p>Delete the Product.</p>
                <form asp-page="/Edit/EditProduct" asp-page-handler="Delete">
                    <input asp-for="ViewModel.CurrentProduct.ProductId" type="hidden" value="@Model.ViewModel.CurrentProduct.ProductId" />
                    <button type="submit">Delete Product</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

</div>